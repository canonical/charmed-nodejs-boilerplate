{
  "name": "react-express-poc",
  "private": true,
  "version": "0.0.4",
  "type": "module",
  "license": "GPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "build": "bun run build:client && bun run build:server",
    "build:all": "bun run build:client && bun run build:server",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "bun run build:server:middleware",
    "build:server:middleware": "vite build --ssr src/ssr/server.ts --outDir dist/server",
    "build:server:cli": "vite build --ssr src/ssr/renderer.tsx --outDir dist/server",
    "watch:server": "chokidar 'src/**/*' -c 'bun run build:server' --initial",
    "watch:client": "chokidar 'src/**/*' -c 'bun run build:client' --initial",
    "start": "node dist/server/server.js",
    "serve": "bun run serve:middleware",
    "serve:middleware": "bun run build:client && bun run build:server:middleware && node dist/server/server.js",
    "serve:cli": "bun run build:client && bun run build:server:cli && bun run serve-express dist/server/renderer.js",
    "check": "bun run check:biome && bun run check:ts",
    "check:fix": "bun run check:biome:fix && bun run check:ts",
    "check:biome": "biome check",
    "check:biome:fix": "biome check --write",
    "check:ts": "tsc --noEmit"
  },
  "dependencies": {
    "@canonical/react-ds-core": "0.9.0",
    "@canonical/react-ssr": "0.9.0",
    "@canonical/styles": "0.9.0",
    "express": "5.1.0",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@canonical/biome-config": "0.9.0",
    "@canonical/typescript-config-react": "0.9.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@types/express": "5.0.3",
    "@types/node": "24.5.2",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "4.7.0",
    "chokidar-cli": "3.0.0",
    "globals": "16.4.0",
    "typescript": "5.9.2",
    "vite": "6.3.5",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  }
}
